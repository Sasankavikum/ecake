<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardDetailsActivity">

    <TextView
        android:id="@+id/delivery_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Credit Card Details"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:id="@+id/pay_img"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/delivery_details"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/card_pay" />

    <TextView
        android:id="@+id/enter_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Card Number"
        android:layout_below="@+id/pay_img"
        android:textSize="20dp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        />

    <EditText
        android:id="@+id/card_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_card_number"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_design"
        android:hint="Card Number"
        android:inputType="number"
        android:padding="13dp"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/enter_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Expire date"
        android:layout_below="@+id/card_number_input"
        android:textSize="20dp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/expire_date_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_phone_number"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_design"
        android:hint="MM/YY"
        android:inputType="date"
        android:maxLength="5"
        android:padding="13dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/enter_cvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your CVV"
        android:layout_below="@+id/expire_date_input"
        android:textSize="20dp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/cvv_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_cvv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_design"
        android:hint="CVV"
        android:inputType="number"
        android:padding="13dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can not change the payment after confirm"
        android:layout_above="@+id/confirm_pay_btn"
        android:textSize="15dp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        />


    <Button
        android:id="@+id/confirm_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:text="Confirm Payment"
        android:textSize="20sp" />

</RelativeLayout>