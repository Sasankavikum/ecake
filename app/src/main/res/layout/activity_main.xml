<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/delivery_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Delivery Details"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150sp"
        android:layout_below="@+id/delivery_details"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/address"/>

    <TextView
        android:id="@+id/enter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Name"
        android:layout_below="@+id/delivery_details"
        android:textSize="20dp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="125dp"
        />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_name"
        android:background="@drawable/input_design"
        android:padding="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"
        android:hint="Name"
        android:layout_marginTop="10sp"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/enter_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Phone Number"
        android:layout_below="@+id/name_input"
        android:textSize="20dp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_phone_number"
        android:background="@drawable/input_design"
        android:padding="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="number"
        android:hint="Phone Number"
        android:layout_marginTop="10sp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/enter_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Address"
        android:layout_below="@+id/phone_number_input"
        android:textSize="20dp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/address_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_address"
        android:background="@drawable/input_design"
        android:padding="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="textMultiLine"
        android:hint="Address"
        android:layout_marginTop="10sp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/enter_town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Town"
        android:layout_below="@+id/address_input"
        android:textSize="20dp"
        android:layout_marginLeft="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/town_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_town"
        android:background="@drawable/input_design"
        android:padding="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="text"
        android:hint="Address"
        android:layout_marginTop="10sp"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/save_address_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp"
        android:text="Save Address"
        android:textSize="20sp"/>

</RelativeLayout>